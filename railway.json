{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm ci && npm run build && cd server && npm ci"
  },
  "deploy": {
    "startCommand": "cd server && node server.js",
    "healthcheckPath": "/api",
    "restartPolicyType": "on-failure",
    "restartPolicyMaxRetries": 10
  }
}
